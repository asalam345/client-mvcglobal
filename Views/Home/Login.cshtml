</head>
<body>

    <div class="limiter">
        <div class="container-login100">
            <div class="col-sm-7 col-sm-offset-3">
            
                <p class="label-info" style="text-align:center;font-weight:bold;font-size:22px; height:40px;color:white;background-color:cadetblue;width:670px;margin-left:37px;border-radius: 10px;">Login Window </p>
            </div>
            <div class="wrap-login100">

                @*<div class="login100-form-title" style="background-image: url(/vendor/icons/LoginImage.png);">*@
                    <div class="login100-form-title" style="background-image: url(/images/14.jpg);">
                        @*<span class="label label-primary" >
                Login In
            </span>*@
                    </div>

                    <form class="login100-form validate-form">
                        <div class="wrap-input100 validate-input m-b-26" data-validate="Username is required">
                            <span class="label-input100">Username</span>
                            <input class="input100" type="text" id="txtUserName" name="username" placeholder="Enter username">
                            <span class="focus-input100"></span>
                        </div>

                        <div class="wrap-input100 validate-input m-b-18" data-validate="Password is required">
                            <span class="label-input100">Password</span>
                            <input class="input100" type="password" id="txtPassword" name="pass" placeholder="Enter password">
                            <span class="focus-input100"></span>
                        </div>

                        <div class="flex-sb-m w-full p-b-30">
                            <div class="contact100-form-checkbox">
                                <input class="input-checkbox100" id="ckb1" type="checkbox" name="remember-me">
                                <label class="label-checkbox100" for="ckb1">
                                    Remember me
                                </label>
                            </div>

                            <div>
                                <a href="#" class="txt1">
                                    Forgot Password?
                                </a>
                            </div>
                        </div>

                        <div class="container-login100-form-btn">
                            <button class="login100-form-btn" id="btnLogin">
                                Login
                            </button>
                        </div>
                    </form>
                </div>
        </div>
    </div>

    @*<!--===============================================================================================-->
        <script src="vendor/jquery/jquery-3.2.1.min.js"></script>

        <!--===============================================================================================-->
        <script src="vendor/animsition/js/animsition.min.js"></script>
