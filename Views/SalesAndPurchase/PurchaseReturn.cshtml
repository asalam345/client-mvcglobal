
@{
    ViewBag.Title = "PurchaseReturn";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="col-sm-8 col-sm-offset-2">
        <p class="label-info" style="text-align:center;font-weight:bold;font-size:20px; height:30px;color:white">Product Purchase Return Window </p>
    </div>

    <br />
    <br />
    <div class="col-sm-12">
        <div class="row">

            <div id="userform">

                <div class="form-group">
                    <div class="col-sm-2">
                        <span> Challan No :</span>
                    </div>
                    <div class="col-sm-4">
                        <input id="txtChallanNo" class="form-control" placeholder="Challan No" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-2">
                        <span> Item Name :</span>
                    </div>

                    <div class="col-sm-4">

                        <select class="form-control" id="txtItem" name="Item">
                            <option value="0">Select Item</option>
                            <option value="1">Soap</option>
                            <option value="2">Baby Food</option>
                            <option value="3">Shampoo</option>
                        </select>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-2">
                        <span>Supplier Challan No :</span>
                    </div>
                    <div class="col-sm-4">
                        <input id="txtSupplierChallanNo" class="form-control" placeholder=" Supplier Challan No" />
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-2">
                        <span>Item Serial No :</span>
                    </div>
                    <div class="col-sm-4">
                        <input id="txtSerialNo" class="form-control" placeholder=" Item Serial No" />
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-2">
                        <span> Supplier Name :</span>
                    </div>
                    <div class="col-sm-4">
                        <select class="form-control" id="ddlSupplier" name="Item">
                            <option value="0">Select Supplier</option>
                            <option value="1">Meghna Group Company Ltd.</option>
                            <option value="2">Akij Food & Bevarage Ltd.</option>
                            <option value="3">Pran Group Of Company Ltd.</option>
                        </select>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-2">
                        <span> Purchase Price :</span>
                    </div>

                    <div class="col-sm-3">
                        <input id="txtPurchasePrice" class="form-control" placeholder="Purchase Price" />
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-2">
                    </div>
                    <div class="col-sm-4">
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-2">
                        <span>Return Quantity :</span>
                    </div>

                    <div class="col-sm-3">
                        <input id="txtQuantity" class="form-control" placeholder="Return Quantity" />
                    </div>
                    <div class="col-sm-1">
                        <button id="btnAdd" type="button" style="height:35px; background-color:ghostwhite;font-weight:bold"> Add </button>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-2">
                    </div>
                    <div class="col-sm-4">
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-2">
                        <span>Return Amount :</span>
                    </div>

                    <div class="col-sm-3">
                        <input id="txtAmount" class="form-control" placeholder="Return Amount" />
                    </div>
                </div>
            </div>

        </div>
        <hr />

        <div class="form-group">
            <div class="col-sm-2">
                <span>Total Item =</span>
            </div>

            <div class="col-sm-2">
                <input id="txtTotalItem" class="form-control" placeholder="Total Item" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-2">
                <span>Total Qnty =</span>
            </div>

            <div class="col-sm-2">
                <input id="txtTotalQnty" class="form-control" placeholder="Total Qnty" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-2">
                <span>Total Price =</span>
            </div>

            <div class="col-sm-2">
                <input id="txtTotalPrice" class="form-control" placeholder=" Total Price" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-4">
            </div>
            <div class="col-sm-4">
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-2">
                <span>Commision Amount =</span>
            </div>

            <div class="col-sm-2">
                <input id="txtCommisionAmount" class="form-control" placeholder="Commision Amount" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-4">
            </div>
            <div class="col-sm-4">
            </div>
        </div>


        <div class="form-group">
            <div class="col-sm-2">
                <span>Net Price =</span>
            </div>

            <div class="col-sm-2">
                <input id="txtNetPrice" class="form-control" placeholder="Net Price" />
            </div>
        </div>


        <div class="col-sm-10 col-sm-offset-2">
            <button id="btnAddNew" class="btn btn-success" type="button"> AddNew</button>
            <button id="btnSave" class="btn btn-success" type="button"> Save</button>
            <button id="btnSave" class="btn btn-success" type="button"> Cancel</button>
            <button id="btnSave" class="btn btn-success" type="button"> Done</button>
        </div>

    </div>

